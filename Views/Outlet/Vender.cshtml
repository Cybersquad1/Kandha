@model IEnumerable<NibsMVC.Models.VenderRegistrationModel>

@{
    ViewBag.Title = "Vender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">

    <!-- BEGIN PAGE HEADER-->

    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("VenderRegistration", "Outlet")">Vendor Registration</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Vendor Details

            </li>

        </ul>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row">
        <p style="color:red; font-size:14px;">@TempData["Message"]</p>
        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-coffee"></i>Vendor Details
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>

                        <a href="javascript:;" class="reload">
                        </a>

                    </div>
                </div>
                <div class="portlet-body">
                    <p> @TempData["error"]</p>
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                <th>
                                    S.NO
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Contact No
                                </th>

                                <th>
                                    Phone No
                                </th>
                                <th>
                                    GSTin
                                </th>
                                <th>
                                    Payment-Cycle Days
                                </th>

                                <th>
                                    Registration Date
                                </th>
                                <th>
                                    Active
                                </th>
                                <th>
                                    Action
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @{

                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @counter
                                        </td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.Address
                                        </td>
                                        <td>
                                            @item.ContactA
                                        </td>
                                        <td>
                                            @item.ContactB
                                        </td>
                                        <td>
                                            @item.GSTin
                                        </td>
                                        <td>
                                            @item.Paymentcycle
                                        </td>

                                        <td>
                                            @item.RegistrationDate
                                        </td>
                                        <td>
                                            <div class="checkbox-list">
                                                <label class="checkbox-inline">
                                                    @if (item.Active)
                                                    {
                                                        <input type="checkbox" id="inlineCheckbox3" value="option3" disabled checked>
                                                    }
                                                    else
                                                    {
                                                        <input type="checkbox" id="inlineCheckbox3" value="option3" disabled>
                                                    }

                                                </label>
                                            </div>
                                        </td>

                                        <td>
                                            <a href="@Url.Action("VenderRegistration", "Outlet", new {@id = item.VendorId })"><span class="fa fa-edit"></span></a>
                                            <a href="@Url.Action("VenderDelete", "Outlet", new {@id = item.VendorId })"><span class="fa fa-trash-o"></span></a>
                                        </td>

                                    </tr>
                                                    counter = counter + 1;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
