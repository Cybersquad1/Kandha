@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NibsMVC.Models.ProfileModel


<div class="page-content">
    <h3 class="page-title">
        @Model.Name Profile
    </h3>
    <div class="row profile">
        <div class="col-md-12">
            <!--BEGIN TABS-->
            <div class="tabbable tabbable-custom tabbable-full-width">
                <div class="row">
                    <div class="col-md-3">
                        <ul class="list-unstyled profile-nav">
                            <li>
                                @if (Model.ProfileImage != null)
                                {
                                    <img src="@Model.ProfileImage" class="img-responsive" alt="" />
                                }
                                else
                                {
                                    <img src="~/Images/No_image_available.jpg" class="img-responsive" alt="" style="border: solid 1px #ddd;" />
                                }
                                <a data-target="#stack1" data-toggle="modal" class="profile-edit" style="cursor:pointer;">
                                    edit
                                </a>
                                <div id="stack1" class="modal fade" tabindex="-1" data-focus-on="input:first">
                                    @using (Html.BeginForm("ChangeProfile", "Outlet", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                                    {
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                            <h4 class="modal-title">Edit Profile Image</h4>
                                        </div>
                                        <div class="modal-body">

                                            <div class="row">
                                                <div class="col-md-12">

                                                    <div class="form-group ">
                                                        <label class="col-md-3">Choose Image</label>
                                                        <div class="col-md-9">
                                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                                   @if(Model.ProfileImage!=null)
                                                                   {
                                                                       <img src="@Model.ProfileImage" alt="" />
                                                                   }
                                                                   else
                                                                   {
                                                                        <img src="~/Images/No_image_available.jpg" alt="" />
                                                                   }
                                                                </div>
                                                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                                                                </div>
                                                                <div>
                                                                    <span class="btn default btn-file">
                                                                        <span class="fileinput-new">
                                                                            Select image
                                                                        </span>
                                                                        <span class="fileinput-exists">
                                                                            Change
                                                                        </span>
                                                                        <input type="file" name="ProfileImage">
                                                                    </span>
                                                                    <a href="#" class="btn red fileinput-exists" data-dismiss="fileinput">
                                                                        Remove
                                                                    </a>
                                                                </div>
                                                            </div>
                                                            <div class="clearfix margin-top-10">
                                                                <span class="label label-danger">
                                                                    NOTE!
                                                                </span>
                                                                Image 
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    }
                                </div>
                            </li>

                        </ul>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-8 profile-info">
                                <h1>@Model.Name</h1>
                                <p>
                                    @Model.Address
                                    <br />
                                    @Model.City
                                </p>
                                <p>@Model.Email</p>
                                <ul class="list-inline">
                                    <li>
                                        <i class="fa fa-user"></i> @Model.UserName
                                    </li>
                                    <li>
                                        <i class="fa fa-calendar"></i> @Model.RegistrationDate.ToShortDateString()
                                    </li>
                                    <li>
                                        <i class="fa fa-tint"></i> @Model.TinNo
                                    </li>
                                    <li>
                                        <i class="fa fa-phone"></i> @Model.ContactA
                                    </li>
                                    <li>
                                        <i class="fa fa-phone-square"></i> @Model.ContactB
                                    </li>
                                </ul>
                            </div>
                            <!--end col-md-8-->
                            <div class="col-md-4">
                                <div class="portlet sale-summary">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            Sales Summary
                                        </div>
                                        <div class="tools">
                                            <a class="reload" href="javascript:;">
                                            </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <ul class="list-unstyled">
                                            <li>
                                                <span class="sale-info">
                                                    TODAY SOLD <i class="fa fa-img-up"></i>
                                                </span>
                                                <span class="sale-num">
                                                    23
                                                </span>
                                            </li>
                                            <li>
                                                <span class="sale-info">
                                                    WEEKLY SALES <i class="fa fa-img-down"></i>
                                                </span>
                                                <span class="sale-num">
                                                    87
                                                </span>
                                            </li>
                                            <li>
                                                <span class="sale-info">
                                                    TOTAL SOLD
                                                </span>
                                                <span class="sale-num">
                                                    2377
                                                </span>
                                            </li>
                                            <li>
                                                <span class="sale-info">
                                                    EARNS
                                                </span>
                                                <span class="sale-num">
                                                    $37.990
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!--end col-md-4-->
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>