@model NibsMVC.Models.TableModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content">
    <div class="row">
        <p style="color:red">@TempData["erortbl"]</p>
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Table Master
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    @using (Html.BeginForm("Create","Table", FormMethod.Post, new {  @id = "formcreatetabel", @class = "form-horizontal" }))
                    {
                     
                        @Html.ValidationSummary(true)
                        @*@Html.HiddenFor(model => model.CategoryId)*@

                        <div class="form-body">
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button>
                                You have some form errors. Please check below.
                            </div>
                            <div style="height:10px;"><span class="errmsg"></span></div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Type <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        @Html.DropDownListFor(a => a.AcType, new SelectList(ViewBag.AcType, "Value", "Text"), "--Choose Type--", new { @class = "form-control" })
                                        @*<select id="ddAcType" class="form-control Routing" name="AcType">
                                            <option value="">Select</option>
                                            <option value="AC">AC</option>
                                            <option value="Non AC">Non AC</option>
                                            </select>*@ 
</div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Table No. <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        @Html.TextBoxFor(a => a.TableNo, new {@class="form-control" ,@maxlength="2" })
                                        @Html.ValidationMessageFor(a=>a.TableNo)
                                       

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">Add</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>


</div>
