                                            <tr>
                                                <th>By Account</th>
                                                <th>Debit Amount</th>
                                                <th>Narration</th>
                                                <th>Action</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr menuidd="-1">
