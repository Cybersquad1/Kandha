@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<NibsMVC.Models.AssignOfferToOutletModel>
<div class="page-content">
    <div class="row">
        <div class="col-md-12 margin-bottom-10">
           <a href="@Url.Action("Create", "AssignOffer")" class="btn btn-primary">Assign Offer</a>
        </div>
        <div class="col-md-12 margin-bottom-10">
            <p style="color:red">@TempData["result"]</p>
        </div>
        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-outdent"></i>Assigned Offer Details
                    </div>

                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                <th>
                                    S.NO
                                </th>
                                <th>
                                    OutLet Name
                                </th>
                                <th>Offer Name</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @counter
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.OfferName
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete", "AssignOffer", new { @id = item.Id })"><span class="fa fa-trash-o"></span></a>
                                        </td>

                                    </tr>
                                    counter = counter + 1;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
          

        </div>
    </div>
  
</div>

