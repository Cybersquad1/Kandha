@model IEnumerable<NibsMVC.Models.OperatorModel>

@{
    ViewBag.Title = "OperatorReports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">

    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            
            <li>
                Operators Report

            </li>

        </ul>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row">
        <p style="color:red">@TempData["error"]</p>



        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-coffee"></i>Operators Details
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>

                        <a href="javascript:;" class="reload">
                        </a>

                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                <th>
                                    S.NO
                                </th>
                                <th>Outlet Name</th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Operator Type
                                </th>
                                <th>
                                    Password
                                </th>
                               

                            </tr>
                        </thead>
                        <tbody>
                            @{

                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @counter
                                        </td>
                                        <td>
                                            @{
                                    NibsMVC.EDMX.NIBSEntities db = new NibsMVC.EDMX.NIBSEntities();
                                    var outname = (from p in db.tblOutlets where p.OutletId == item.Outletid select p.Name).FirstOrDefault();
                                            }
                                            @outname
                                        </td>

                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @item.ContactNo
                                        </td>
                                        <td>
                                            @item.Type
                                        </td>
                                        <td>
                                            @item.Password
                                        </td>
                                       

                                    </tr>
                                    counter = counter + 1;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>