
@model NibsMVC.EDMX.VendorBillingMaster

<link href="~/assets/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/admin/layout/css/print.css" rel="stylesheet" />
<style>
    .table > tbody > tr > td, .table > thead > tr > th {
        border-bottom: none;
        border-top: none !important;
    }

    .table {
        margin-bottom: 0px !important;
    }

    .font-size-12 {
        font-size: 12px !important;
    }
</style>
<div class="container font-size-12">
    <div class="row">
        <div class="col-md-6">
            <a href="" onclick="window.print()" class="forscreen btn green" style="background-color: green; width: 100px; color: white; margin-top: 10px;">Print</a>
            <h3>Hotel Kandha</h3>
            <!--<h4>A Unit of KGC Enterprises</h4>-->
            <strong>TIN No: @Model.OutletVendor.tblOutlet.TinNo </strong>
            <div class="clear1"></div>
            <strong>ServiceTax No: @Model.OutletVendor.tblOutlet.ServiceTaxNo</strong>
            <div class="clear1"></div>
            <b>
                @Model.OutletVendor.tblOutlet.Address

            </b>
            <div class="clear1"></div>
            <p class=" font-size-12">Chennai-600 042 <b style='margin-left:10px; font-weight:100'>PH: @Model.OutletVendor.tblOutlet.ContactA </b></p>
            <p class="text-left" style="padding-left: 13%;width:300px;">
                @DateTime.Now
            </p>
            @*<p><b style='margin-left:90px;'>Sales Invoice</b></p>*@
            <table class="table  font-size-12" style="width:300px;">
                <tbody>
                    <tr>
                        <td>
                            BillNo
                        </td>
                        <td><b>@Model.OrderId</b></td>
                    </tr>
                    <tr>
                        @if (Model.OutletVendor.VenderName != null)
                        {
                            <td>Name:</td>
                            <td> @Model.OutletVendor.VenderName</td>
                        }
                        @if (Model.OutletVendor.VenderContact != null)
                        {
                            <td>
                                Contact:
                            </td>
                            <td><b>@Model.OutletVendor.VenderContact</b></td>
                        }


                    </tr>
                    @if (Model.OutletVendor.VendorAddress != null)
                    {
                        <tr>
                            <td>
                                Address
                            </td>
                            <td colspan="3"><b>@Model.OutletVendor.VendorAddress</b></td>

                        </tr>
                    }

                </tbody>
            </table>

            <table style='width:300px;' class="table font-size-12">
                <thead>
                    <tr>
                        <th style='text-align:left'>Sr</th>
                        <th style='text-align:left'>Item</th>
                        <th style='text-align:left'>F</th>
                        <th style='text-align:left'>Amt</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int Count = 1;
                    }
                    @foreach (var item in Model.VendorBillingItems)
                    {
                        <tr>
                            <td>@Count</td>
                            <td style="font-size: 9px;">@item.tblItem.Name</td>

                            <td>@item.Quantity</td>

                            <td>@item.Amount</td>
                        </tr>
                        Count = Count + 1;
                    }
                </tbody>
            </table>

            @*<table class="table font-size-12" style="width:300px;">
                <tbody>

                    @foreach (var item in Model.getAllVat.GroupBy(a => a.Vat))
                    {
                        <tr>
                            <td><b>Vat Amount(@item.Key%)</b></td>

                            <td><b>@item.Sum(a => a.amtCharges)</b></td>
                        </tr>
                    }


                </tbody>
            </table>*@
            <table class="table font-size-12" style="width:300px;">
                <tbody>
                    <tr>
                        @*<td><b>Service Tax(4.944)</b></td>*@
                        <td><b>Service Tax(5.6)</b></td>
                        <td>@Model.ServicTaxAmount</td>
                    </tr>
                    <tr>
                        <td><b>ServicesCharge</b></td>
                        <td>@Model.ServiceChargeAmount</td>
                    </tr>

                    <tr>
                        <td><b>Total Amount</b></td>
                        <td>@Model.TotalAmount</td>
                    </tr>


                    <tr>
                        <td><b>Net Amount</b></td>
                        <td>@Model.NetAmount</td>
                    </tr>
                </tbody>
            </table>

            <p class="text-left" style="padding-left: 14%; border-top:dashed 1px #000;width:300px;">
                Thanks for visit !
            </p>

        </div>
    </div>
</div>