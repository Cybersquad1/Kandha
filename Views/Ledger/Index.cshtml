@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<NibsMVC.Models.LedgerModel>
<div class="page-content">

    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="@Url.Action("AddLedger","Ledger")">Add Ledger</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                List Of Ledger Group
            </li>
        </ul>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row">
        <div class="col-md-12">
            <p style="color:red">@TempData["Error"]</p>
        </div>
        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-coffee"></i> Ledger Report
                    </div>

                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                <th>
                                    S.NO
                                </th>
                                
                                <th>
                                    Ledger Name
                                </th>
                                <th>
                                    Ledger Group Name
                                </th>
                                <th>
                                    Date
                                </th>
                                <th>
                                    Opening Baalance
                                </th>
                                <th>
                                    Percentage
                                </th>
                                <th>
                                    Transfer Type
                                </th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{

                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @counter
                                        </td>
                                        
                                        <td>
                                            @item.LedgerName
                                        </td>
                                        <td>
                                            @item.LedgerGroupName
                                        </td>
                                        <td>
                                            @item.Date.ToString("dd-MM-yyyy")
                                        </td>
                                        <td>
                                            @item.OpeningBalance
                                        </td>
                                        <td>
                                            @item.Percentage
                                        </td>
                                        <td>
                                            @item.TransferType
                                        </td>                                        
                                        <td>
                                            <a href="@Url.Action("AddLedger", "Ledger", new { @id = item.Id })"><span class="fa fa-edit"></span></a>
                                            <a href="@Url.Action("Delete", "Ledger", new { @id = item.Id })" class="block_Category"><span class="fa fa-trash-o"></span></a>
                                        </td>

                                    </tr>
                                    counter = counter + 1;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->
            <script>
                $(document).on('click', '.block_Category', function (e) {
                    if (!confirm("Do you want to delete")) {
                        return false;
                    }
                });
            </script>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>