@model NibsMVC.Models.ServiceChargesModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-md-12 margin-bottom-10">
            <p style="color:red">@TempData["servicCreate"]</p>
        </div>
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>Service Charges Master
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    @using (Html.BeginForm("Create", "ServicCharges", FormMethod.Post, new { @id = "form_sample_20", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model=>model.ServiceId)
                        @*@Html.HiddenFor(model => model.CategoryId)*@

                        <div class="form-body">
                            <div class="alert alert-danger display-hide">
                                <button class="close" data-close="alert"></button>
                                You have some form errors. Please check below.
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Service Name <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-4">
                                
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            @Html.DropDownListFor(model => model.ServicName, new List<SelectListItem> {
                                        new SelectListItem { Text = "-- select a type --", Value = "" },
                                        new SelectListItem { Text = "Restaurant Charges", Value = "R" },
                                        new SelectListItem { Text = "TakeAway Charges", Value = "T" },
                                        new SelectListItem { Text = "HomeDelivery Charges", Value = "H"},
                                       }, new { @class = "form-control" })

                                        </div>
                                       
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Service Charges <span class="required">
                                        *
                                    </span>
                                </label>
                                <div class="col-md-4">
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        @Html.TextBoxFor(model => model.ServiceCharges, new { @class = "form-control number" })
                                       @*// <input type="text" name="ServiceCharges" class="form-control number" />*@

                                    </div>
                                </div>
                            </div>
                            @*<button type="submit" class="btn green">Set Price</button>*@
                        </div>


                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green">Submit</button>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>


</div>