                                    <th>Transfer Date</th>
                                    <th>Department</th>
                                    <th>Category</th>
                                    <th>Item Description</th>
                                    <th>Unit</th>
                                    <th>Issued Quantity</th>
                                    <th>Retrun</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                        var counter = 1;
                        NIBSEntities db = new NIBSEntities();
