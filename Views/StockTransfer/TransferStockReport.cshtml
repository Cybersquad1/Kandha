                        {

                            <tr>
                                <td>
                                    @item[0].Day-@item[0].Month-@item[0].Year
                                </td>
                                <td>
                                    @item[1]
                                </td>
                                <td>
                                    @item[2]
                                </td>
                                <td>
                                    @item[3]
                                </td>
                                <td>
                                    @item[4]
                                </td>
                                <td>
                                    @item[5].ToString("0.00")
                                </td>
                                @*<td>
                                <a href="@Url.Action("stockReturn", "StockTransfer", new { Transferid = @item[6], RawMaterialId= @item[7], Quantity=@item[5] })"><span class="fa fa-repeat"></span></a></td>*@
                                <td><a href="@Url.Action("PurchaseReturn", "Purchase", new { Transferid = @item[6], RawMaterialId = @item[7], Quantity = @item[5] })"><span class="fa fa-repeat"></span></a></td>
                            </tr>
                            counter = counter + 1;
                        }

                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
