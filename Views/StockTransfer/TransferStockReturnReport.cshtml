@model IEnumerable<NibsMVC.Models.outeltStockReturnModel>

@{
    ViewBag.Title = "ReturnPurchaseReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using NibsMVC.EDMX;
<div class="page-content">

    <!-- BEGIN PAGE HEADER-->
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Create", "StockTransfer")">Transfer Stock</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="@Url.Action("Index", "StockTransfer")">Transfer Details</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Purchase Return Details
            </li>
        </ul>

    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->

    <div class="row">
        <p style="color:red">@TempData["Prerror"]</p>
        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-coffee"></i>Transfer Return Details
                    </div>
                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>

                        <a href="javascript:;" class="reload">
                        </a>

                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                @*<th>
                                        S.NO
                                    </th>*@

                                <th>Item Name</th>
                                <th>Return Quantity</th>
                                <th>Units</th>
                                <th>Return Description</th>
                                <th>Return Date</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                NIBSEntities db = new NIBSEntities();
                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>
                                                @counter
                                            </td>*@


                                        <td>
                                            @item.RawMaterialName
                                        </td>
                                        <td>
                                            @item.ReturnQuantity
                                        </td>
                                        <td>
                                            @item.Unit
                                        </td>

                                        <td>
                                            @item.Reasion
                                        </td>

                                        <td>
                                            @item.StockReturnDate.ToShortDateString()
                                        </td>
                                        @*<td>

                                            @*<a href="@Url.Action("Delete", "Purchase", new { id = item.PurchaseReturnId })"><span class="fa fa-trash-o"></span></a>*@

                                        @*</td>*@
                                        @*<td>
                                                <a href="@Url.Action("Create", "Category", new { @id = item.CategoryId })" class="btn btn-xs red">Edit</a>
                                                <a href="@Url.Action("Delete", "Category", new { @id = item.CategoryId })" class="btn btn-xs red">Delete</a>
                                            </td>*@

                                    </tr>
                                    counter = counter + 1;
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>
