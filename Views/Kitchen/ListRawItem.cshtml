@model List<NibsMVC.Models.ListofRawIndentItem>
@{
    ViewBag.Title = "KitchenRawList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <p style="color:red">@TempData["Error"]</p>
        </div>
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="@Url.Action("Index","Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="@Url.Action("AddIndent","Kitchen")">List Of Ingredient</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    Ingredient Reports
                </li>
            </ul>

        </div>
        <div class="col-md-12" style="padding-left:0px;padding-right:0px;">
            <!-- BEGIN BORDERED TABLE PORTLET-->
            <div class="portlet box yellow">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-coffee"></i>List Of Item Ingredient Report
                    </div>

                </div>
                <div class="portlet-body">
                    <table class="table table-bordered table-hover table-full-width" id="sample_2">
                        <thead>
                            <tr>
                                <th>
                                    S.NO
                                </th>
                                <th>
                                    Category Name
                                </th>
                                <th>
                                    Item Name
                                </th>
                                <th>
                                    Raw Material
                                </th>
                                <th>Quantity</th>
                                <th>
                                    Unit
                                </th>
                                <th>
                                    Portion
                                </th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{

                                var counter = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.id
                                        </td>
                                        <td>
                                            @item.category
                                        </td>
                                        <td>
                                            @item.item

                                        </td>
                                        <td>
                                            @item.rawitem
                                        </td>
                                        <td>
                                            @item.quantity
                                        </td>
                                        <td>
                                            @item.unit
                                        </td>
                                        <td>
                                            @item.portion
                                        </td>
                                        <td>
                                            @*<a href="@Url.Action("EditRawIndent", "Kitchen", new { id= item.id})"><span class="fa fa-edit"></span></a>*@
                                        <a href="@Url.Action("DeleteIndentItem","Kitchen", new { @id = item.id })"><span class="fa fa-trash-o"></span></a>
                                    </td>

                                </tr>
                                    counter = counter + 1;
                                }

                            }
                        </tbody>

                    </table>
                </div>
            </div>
            <!-- END BORDERED TABLE PORTLET-->

        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>